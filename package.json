{
  "name": "guru-legal-bot",
  "version": "1.0.0",
  "description": "Legal WhatsApp bot for managing clients, cases, and communications",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run client:dev\"",
    "db:init": "node src/db/init.js",
    "db:seed": "node src/db/seed.js",
    "db:migrate": "node src/db/migrate-phone.js",
    "db:migrate-media": "node src/db/migrate-media.js"
  },
  "keywords": [
    "legal",
    "whatsapp",
    "bot",
    "baileys"
  ],
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}
